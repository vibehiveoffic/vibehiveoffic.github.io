rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /attachments/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}